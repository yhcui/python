<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/xyhsys_u_notification_view"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffE0FFFF" >

    <ImageView
        android:id="@+id/xyhsys_u_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:src="@drawable/xyhsys_u_ic_launcher0" />

    <!-- android:text="aaaaaa" -->

    <ImageView
        android:id="@+id/xyhsys_u_line"
        android:layout_width="0.5dp"
        android:layout_height="fill_parent"
        android:layout_margin="2dp"
        android:layout_toRightOf="@id/xyhsys_u_icon"
        android:background="#44000000" />

    <LinearLayout
        android:id="@+id/xyhsys_u_firstLine"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/xyhsys_u_line"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/xyhsys_u_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="6.5dp"
            android:layout_weight="1"
            android:singleLine="true"
            android:textColor="#BB032252"
            android:textSize="17sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/xyhsys_u_download_part"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dp"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/xyhsys_u_download_times_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:singleLine="true"
                android:textColor="#AA000000"
                android:textSize="14sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/xyhsys_u_download_times"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@id/xyhsys_u_download_times_text"
                android:singleLine="true"
                android:textColor="#99ff0044"
                android:textSize="14sp"
                android:textStyle="italic|bold" />

            <TextView
                android:id="@+id/xyhsys_u_follow_download_times"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@id/xyhsys_u_download_times"
                android:singleLine="true"
                android:textColor="#AA000000"
                android:textSize="14sp"
                android:textStyle="italic" />
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/xyhsys_u_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/xyhsys_u_firstLine"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="3dp"
        android:layout_toRightOf="@id/xyhsys_u_line"
        android:singleLine="true"
        android:textColor="#99032252"
        android:textSize="14.5sp" />

</RelativeLayout>