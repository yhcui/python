                            android:background="@null"
                            android:button="@drawable/sys_checkbox_bg"
                            android:checked="true"
                            android:paddingLeft="20dip"
                            android:text=""
                            android:textColor="@color/text"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/sys_user_phone_user_agreement"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:paddingRight="8dip"
                            android:text="@string/sys_user_agreement"
                            android:textColor="@color/text"
                            android:textSize="14sp" />
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/sys_user_phone_register_rel"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dip"
                    android:layout_marginLeft="8dip"
                    android:layout_marginRight="8dip"
                    android:layout_marginTop="20dip"
                    android:gravity="center_vertical" >

                    <Button
                        android:id="@+id/sys_user_phone_register_button"
