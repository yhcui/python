<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sys_user_root"
    android:layout_width="280dip"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:gravity="center_horizontal"
    android:layout_gravity="center" >


    <TextView
        android:id="@+id/sys_user_list_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/sys_user_list_title_bg"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/sys_user_exist_username"
        android:textColor="@color/white"
        android:textSize="20sp" />
    <ListView
        android:id="@+id/sys_user_list_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:listSelector="@drawable/sys_user_list_item_bg"
        android:divider="#b2b2b2"
        android:dividerHeight="1dip"
        android:footerDividersEnabled="true"
        android:stackFromBottom="true"
        android:layout_below="@id/sys_user_list_title">
    </ListView>

    <Button
        android:id="@+id/sys_user_cancel_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sys_user_list_view"
        android:layout_gravity="center"
        android:layout_marginBottom="16dip"
        android:layout_marginTop="16dip"
        android:layout_centerHorizontal="true"
        android:background="@drawable/sys_button_bg"
        android:layout_marginLeft="40dip"
        android:layout_marginRight="40dip"
        android:text="@string/sys_cancel"
        android:textColor="@color/white"
        android:textSize="16sp" />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_below="@id/sys_user_cancel_button">
        
    </TextView>

</RelativeLayout>