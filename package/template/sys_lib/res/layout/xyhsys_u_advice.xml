<?xml version="1.0" encoding="utf-8"?>  
  
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"  
    android:layout_width="wrap_content" 
    android:layout_height="wrap_content"  >  
    <TextView
        android:id="@+id/xyhsys_u_title"
        android:layout_width="wrap_content"
  	    android:layout_height="wrap_content"
  	    android:layout_centerHorizontal="true"
  	    android:visibility="gone"/>
    <ImageView 
  	    android:id="@+id/xyhsys_u_imageview"
  	    android:layout_width="wrap_content"
  	    android:layout_height="wrap_content"
  	    android:layout_below="@id/xyhsys_u_title"
  	    android:layout_centerHorizontal="true"
  	    android:visibility="gone"/>
    
    <ImageView 
        android:id="@+id/xyhsys_u_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/xyhsys_u_imageview"
		android:layout_alignRight="@id/xyhsys_u_imageview"
        android:visibility="gone"/>
    <TextView
  	    android:id="@+id/xyhsys_u_textview"
  	    android:layout_width="wrap_content"
  	    android:layout_height="wrap_content"
  	    android:layout_centerInParent="true"
  	    android:layout_below="@id/xyhsys_u_imageview"
  	    android:visibility="gone"/>
</RelativeLayout> 